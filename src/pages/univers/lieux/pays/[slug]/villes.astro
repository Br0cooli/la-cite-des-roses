---
import BaseLayout from "@layouts/BaseLayout.astro";

// Route dynamique = Astro exige un getStaticPaths,
// même si pour l'instant on ne génère aucune page concrète.
export async function getStaticPaths() {
  // Quand tu auras une vraie logique de pays, on remplira ça.
  return [];
}

// On récupère le slug au cas où plus tard tu veuilles l'utiliser
const { slug } = Astro.params;

function formatSlug(slug: string | undefined) {
  if (!slug) return "ce pays";
  return slug
    .replace(/-/g, " ")
    .replace(/\b\w/g, (c) => c.toUpperCase());
}
---

<BaseLayout title={`Villes de ${formatSlug(slug as string)}`}>
  <section class="card">
    <h1 class="page-title">Villes de {formatSlug(slug as string)}</h1>
    <p class="page-subtitle">
      Cette page « Villes » est encore en construction. Elle est juste là pour que
      le build Astro arrête de faire sa diva et te laisse déployer ton site.
    </p>

    <p>
      Plus tard, on pourra lier cette page à tes données (JSON de pays, de villes, etc.),
      avec une vraie navigation, des cartes, tout ton délire d’Aureval.
    </p>
  </section>
</BaseLayout>
